void LCD_STM32_Print_New_Char(uint8_t a){

	LCD_STM32_CMD(0x00);
	LCD_STM32_CMD(a-1);

}
void LCD_STM32_Clear(void){

	LCD_STM32_CMD(0x00);
	LCD_STM32_CMD(0x01);
}
void LCD_STM32_Home(void){

    LCD_STM32_CMD(0x00);
    LCD_STM32_CMD(0x02);
